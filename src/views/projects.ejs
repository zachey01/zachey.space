<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <header><%- include('../partials/header.ejs') %></header>
    <main>
      <head>
        <link
          href="https://fonts.googleapis.com/css?family=Open+Sans:300i,400"
          rel="stylesheet"
        />
      </head>
      <body>
        <div class="card-container">
          <% json.forEach(function(project) { %>
          <div class="project-card">
            <a href="<%= project.link %>"
              ><h3 class="project-card__title"><%= project.name %></h3></a
            >
            <div class="bar">
              <script>
                if (translateText.lang === "ru") {
                  document.write(`<%= project.description.ru %>`);
                } else if (translateText.lang === "ua") {
                  document.write(`<%= project.description.ua %>`);
                } else {
                  document.write(`<%= project.description.en %>`);
                }
              </script>
            </div>
          </div>
          <% }); %>
        </div>
      </body>
    </main>
  </body>
</html>
